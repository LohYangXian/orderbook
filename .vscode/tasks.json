{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Entire Project",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-O2",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Orderbook.cpp",
                // add all your .cpp files explicitly
                "-I${workspaceFolder}",
                "-o",
                "${workspaceFolder}/orderbook"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
